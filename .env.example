# Azure AD / Entra ID Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=entra_governance.log

# Optional: Custom Settings
TOKEN_CACHE_FILE=.token_cache.json
REPORT_OUTPUT_DIR=reports

# Splunk SIEM Integration (v1.1 - December 2025)
SPLUNK_ENABLED=false
SPLUNK_MOCK_MODE=true
SPLUNK_HEC_URL=https://splunk.example.com:8088
SPLUNK_HEC_TOKEN=your-hec-token-here
SPLUNK_INDEX=entra_id_governance
SPLUNK_SOURCE=entra_governance_toolkit
SPLUNK_SOURCETYPE=entra:identity:governance
SPLUNK_VERIFY_SSL=true
SPLUNK_TIMEOUT=30
SPLUNK_MAX_RETRIES=3

# Splunk Auto-Remediation
SPLUNK_AUTO_REMEDIATION=false

# Event Forwarding Controls
SPLUNK_FORWARD_ACCESS_REVIEWS=true
SPLUNK_FORWARD_PIM_ACTIVATIONS=true
SPLUNK_FORWARD_POLICY_CHANGES=true
SPLUNK_FORWARD_COMPLIANCE_VIOLATIONS=true
